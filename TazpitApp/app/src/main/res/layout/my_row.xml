<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="148dp">

            <TextView
                android:id="@+id/timeArticle"
                android:layout_width="164dp"
                android:layout_height="17dp"
                android:layout_marginTop="4dp"
                android:text="זמן פרסום"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.489"
                app:layout_constraintStart_toEndOf="@+id/writerArticle"
                app:layout_constraintTop_toBottomOf="@+id/dataArticle" />

            <TextView
                android:id="@+id/writerArticle"
                android:layout_width="70dp"
                android:layout_height="19dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="הכותב"
                app:layout_constraintStart_toStartOf="@+id/dataArticle"
                app:layout_constraintTop_toBottomOf="@+id/dataArticle" />

            <TextView
                android:id="@+id/dataArticle"
                android:layout_width="283dp"
                android:layout_height="66dp"
                android:layout_marginEnd="8dp"
                android:text="גוף הכתבה"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titleArticle"
                android:layout_width="260dp"
                android:layout_height="23dp"
                android:layout_marginTop="16dp"
                android:text="כותרת"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.894"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageArticale"
                android:layout_width="116dp"
                android:layout_height="141dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dataArticle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.571"
                tools:srcCompat="@tools:sample/avatars" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>