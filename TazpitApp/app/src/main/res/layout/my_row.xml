<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:background="@color/tps_color_gray">

            <TextView
                android:id="@+id/writerArticle"
                android:layout_width="184dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="הכותב"
                app:layout_constraintStart_toStartOf="@+id/imageArticale"
                app:layout_constraintTop_toBottomOf="@+id/dataArticle" />

            <TextView
                android:id="@+id/dataArticle"
                android:layout_width="281dp"
                android:layout_height="90dp"
                android:layout_marginEnd="8dp"
                android:gravity="center|left"
                android:text="גוף הכתבה"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.456" />

            <TextView
                android:id="@+id/titleArticle"
                android:layout_width="280dp"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:gravity="left"
                android:text="כותרת"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.938"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageArticale"
                android:layout_width="113dp"
                android:layout_height="129dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/dataArticle"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.114"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/timeArticle"
                android:layout_width="185dp"
                android:layout_height="39dp"
                android:layout_marginTop="8dp"
                android:text="זמן פרסום"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.36"
                app:layout_constraintStart_toEndOf="@+id/writerArticle"
                app:layout_constraintTop_toBottomOf="@+id/dataArticle" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>